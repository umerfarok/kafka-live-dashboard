# Development Environment with SSL enabled (for testing SSL functionality)
KAFKA_BROKERS=localhost:9093
KAFKA_TOPIC=test-topic
KAFKA_GROUP_ID=kafka-dashboard-group
KAFKA_OFFSET=latest
ZOOKEEPER_NODES=localhost:2181

# Security Configuration
SECURITY_PROTOCOL=SSL
USE_SSL=true
USE_SASL=false
SSL_CA_LOCATION=/app/certs/ca.crt
SSL_CERT_LOCATION=/app/certs/client.crt
SSL_KEY_LOCATION=/app/certs/client.key
SSL_VERIFY_CERTIFICATES=false  # Disabled for development

# HTTP Configuration
HTTP_PORT=5001
HTTP_READ_TIMEOUT=10
HTTP_WRITE_TIMEOUT=10
HTTP_IDLE_TIMEOUT=10

# Feature Flags
CREATE_TEST_TOPIC=true  # Enabled for development

# Frontend Configuration
VITE_API_URL=http://localhost:5001