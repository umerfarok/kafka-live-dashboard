# AWS MSK Configuration Example
SECURITY_PROTOCOL=SASL_SSL
KAFKA_BROKERS=broker1.kafka.region.amazonaws.com:9096,broker2.kafka.region.amazonaws.com:9096
KAFKA_TOPIC=your-topic
KAFKA_GROUP_ID=kafka-dashboard-group
KAFKA_OFFSET=latest

# SSL Configuration
USE_SSL=true
SSL_CA_LOCATION=/app/certs/ca.crt
SSL_VERIFY_CERTIFICATES=true

# SASL Configuration
USE_SASL=true
SASL_MECHANISM=SCRAM-SHA-512
KAFKA_USERNAME=REPLACE_WITH_MSK_USERNAME
KAFKA_PASSWORD=REPLACE_WITH_MSK_PASSWORD

# AWS Configuration
AWS_REGION=REPLACE_WITH_AWS_REGION
AWS_ACCESS_KEY_ID=REPLACE_WITH_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_SECRET_KEY

# HTTP Configuration
HTTP_PORT=5001
HTTP_READ_TIMEOUT=30
HTTP_WRITE_TIMEOUT=30
HTTP_IDLE_TIMEOUT=60

# Feature Flags
CREATE_TEST_TOPIC=false