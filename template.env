# Basic Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=test-topic
KAFKA_GROUP_ID=kafka-dashboard-group
KAFKA_OFFSET=latest
ZOOKEEPER_NODES=localhost:2181

# HTTP Configuration
HTTP_PORT=5001
HTTP_READ_TIMEOUT=10
HTTP_WRITE_TIMEOUT=10
HTTP_IDLE_TIMEOUT=10

# Security Protocol Configuration
# Valid values: PLAINTEXT, SSL, SASL_PLAINTEXT, SASL_SSL
SECURITY_PROTOCOL=PLAINTEXT

# SSL Configuration
USE_SSL=false
SSL_CA_LOCATION=/app/certs/ca.crt
SSL_CERT_LOCATION=/app/certs/client.crt
SSL_KEY_LOCATION=/app/certs/client.key
SSL_KEY_PASSWORD=
SSL_VERIFY_CERTIFICATES=true

# SASL Configuration
USE_SASL=false
# Valid values: PLAIN, SCRAM-SHA-256, SCRAM-SHA-512
SASL_MECHANISM=PLAIN
KAFKA_USERNAME=
KAFKA_PASSWORD=

# AWS MSK Configuration
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Feature Flags
CREATE_TEST_TOPIC=false

# Frontend Configuration
VITE_API_URL=http://localhost:5001

# ====================================
# Example Configurations for Each Auth Method
# ====================================

# 1. PLAINTEXT (Default) - Port 9092
# SECURITY_PROTOCOL=PLAINTEXT
# KAFKA_BROKERS=localhost:9092
# USE_SSL=false
# USE_SASL=false

# 2. SSL Only - Port 9093
# SECURITY_PROTOCOL=SSL
# KAFKA_BROKERS=localhost:9093
# USE_SSL=true
# USE_SASL=false
# SSL_CA_LOCATION=/app/certs/ca.crt
# SSL_CERT_LOCATION=/app/certs/client.crt
# SSL_KEY_LOCATION=/app/certs/client.key
# SSL_VERIFY_CERTIFICATES=true

# 3. SASL_PLAINTEXT - Port 9094
# SECURITY_PROTOCOL=SASL_PLAINTEXT
# KAFKA_BROKERS=localhost:9094
# USE_SSL=false
# USE_SASL=true
# SASL_MECHANISM=PLAIN
# KAFKA_USERNAME=your-username
# KAFKA_PASSWORD=your-password

# 4. SASL_SSL (AWS MSK) - Port 9096
# SECURITY_PROTOCOL=SASL_SSL
# KAFKA_BROKERS=broker1.kafka.region.amazonaws.com:9096,broker2.kafka.region.amazonaws.com:9096
# USE_SSL=true
# USE_SASL=true
# SASL_MECHANISM=SCRAM-SHA-512
# KAFKA_USERNAME=your-msk-username
# KAFKA_PASSWORD=your-msk-password
# SSL_CA_LOCATION=/app/certs/ca.crt
# SSL_VERIFY_CERTIFICATES=true
# AWS_REGION=your-region
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ====================================
# Port Summary:
# - PLAINTEXT: 9092
# - SSL: 9093
# - SASL_PLAINTEXT: 9094
# - SASL_SSL: 9096
# ====================================